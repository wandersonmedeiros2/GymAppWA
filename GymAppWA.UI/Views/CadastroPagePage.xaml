        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Lista de Alunos"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontSize="28"
                   x:Name="txTitle"
                   />
        
